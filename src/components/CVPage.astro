---
import type { Locale } from "../i18n/ui";

type Props = {
    locale: Locale;
};

const { locale } = Astro.props;

type CVEntry = {
    start: string;
    end: string;
    position: string;
    organization: string;
    department: string;
};
const jaCV: CVEntry[] = [
    {
        start: "2025/4",
        end: "現在",
        position: "院生",
