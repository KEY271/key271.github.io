        department: "東京大学大学院理学系研究科物理学専攻",
    },
    {
        start: "2023/4",
        end: "2025/3",
        position: "学部生",
        organization: "",
        department: "東京大学理学部物理学科",
    },
    {
        start: "2021/4",
        end: "2023/3",
        position: "学部生",
        organization: "",
        department: "東京大学教養学部理科一類",
    },
    {
        start: "2018/4",
        end: "2021/3",
        position: "高校生",
        organization: "",
        department: "岐阜県立岐阜高等学校",
    },
];
const enCV: CVEntry[] = [
    {
        start: "Apr, 2025",
        end: "Present",
        position: "Grad.",
        organization: "Kavli IPMU",
        department: "Dept. of Physics, UTokyo",
    },
    {
        start: "Apr, 2023",
        end: "Mar, 2025",
        position: "Undergrad.",
        organization: "",
        department: "Dept. of Physics, UTokyo",
    },
    {
        start: "Apr, 2021",
        end: "Mar, 2023",
        position: "Undergrad.",
        organization: "",
