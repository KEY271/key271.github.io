---
import { Image } from "astro:assets";
import profileImage1 from "../assets/images/me_1.jpg";
import profileImage2 from "../assets/images/me_2.jpg";
import type { Locale } from "../i18n/ui";

type Props = {
    locale: Locale;
};

const { locale } = Astro.props;
---

<h1>
    <span>Keita Tsuji</span>
    <span>(辻 圭汰)</span>
</h1>

<div class="about-container">
    <div class="about">
        <p>
            {locale === "ja" ? "所属" : "Affiliation"}: <a
                href="https://www.ipmu.jp/"
                >{
                    locale === "ja"
                        ? "カブリ数物連携宇宙研究機構"
                        : "Kavli IPMU"
                }</a
            >
        </p>
        <p>
            {locale === "ja" ? "指導教員" : "Supervisor"}: <a
                href="https://member.ipmu.jp/yuji.tachikawa/"
            >
                {locale === "ja" ? "立川 裕二" : "Yuji Tachikawa"}
            </a>
        </p>
        <p>
            {
                locale === "ja"
                    ? "興味: 場の量子論"
                    : "Research topic: Quantum field theory"
            }
        </p>
        <p>
            {
                locale === "ja"
                    ? "特に、一般化対称性・CFT・TQFT"
                    : "In particular, Generalized symmetries, CFT, TQFT"
            }
        </p>
        <p>e-mail: keita.tsuji[at]ipmu.jp</p>
    </div>
    <div class="profile-image">
        <Image
            id="profile-image-1"
            src={profileImage1}
            alt="My photo."
            widths={[300, 400]}
            sizes={`(max-width: 960px) 300px, 400px`}
            layout="constrained"
        />
        <Image
            id="profile-image-2"
            src={profileImage2}
            alt="My photo."
            widths={[300, 400]}
            sizes={`(max-width: 960px) 300px, 400px`}
            layout="constrained"
        />
    </div>
</div>

<script>
    const img1 = document.getElementById("profile-image-1");
    const img2 = document.getElementById("profile-image-2");
    if (img1 && img2) {
        if (Math.random() < 0.5) {
            img1.style.display = "none";
            img2.style.display = "block";
        }

        img1.onclick = () => {
            img1.style.display = "none";
            img2.style.display = "block";
        };

        img2.onclick = () => {
            img2.style.display = "none";
            img1.style.display = "block";
        };
    }
</script>

<style>
    h1 span {
        display: inline-block;
    }
    .about-container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        flex: 1;
        margin-top: 2em;
    }
    .about {
        display: flex;
        flex-direction: column;
        font-size: 20px;
        gap: 1em;
    }
    .profile-image {
        width: 400px;
    }
    #profile-image-2 {
        display: none;
    }
    @media screen and (max-width: 960px) {
        .profile-image {
            width: 300px;
        }
    }
</style>
