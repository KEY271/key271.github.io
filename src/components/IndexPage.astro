---
import { Image } from "astro:assets";
import profileImage1 from "../assets/images/me_1.jpg";
import type { Locale } from "../i18n/ui";

type Props = {
    locale: Locale;
};

const { locale } = Astro.props;
const label_affiliation = locale === "ja" ? "所属" : "Affiliation";
const affiliation =
    locale === "ja"
        ? "カブリ数物連携宇宙研究機構 修士課程"
        : "Master's course at Kavli IPMU";
const label_supervisor = locale === "ja" ? "指導教員" : "Supervisor";
const supervisor = locale === "ja" ? "立川 裕二" : "Yuji Tachikawa";
const label_interest = locale === "ja" ? "興味" : "Research topic";
const interest = locale === "ja" ? "場の量子論" : "Quantum field theory";
const label_particular_topics = locale === "ja" ? "特に" : "In particular";
const particular_topics =
    locale === "ja"
        ? "一般化対称性・CFT・TQFT"
        : "Generalized symmetries, CFT, TQFT";
---

<h1>
    <span>Keita Tsuji</span>
    <span>(辻 圭汰)</span>
</h1>

<div class="about-container">
    <div class="about">
        <p>{label_affiliation}: {affiliation}</p>
        <p>
            {label_supervisor}: <a href="https://member.ipmu.jp/yuji.tachikawa/"
                >{supervisor}</a
            >
        </p>
        <p>{label_interest}: {interest}</p>
        <p>{label_particular_topics}: {particular_topics}</p>
        <p>e-mail: keita.tsuji[at]ipmu.jp</p>
    </div>
    <div class="profile-image">
        <Image
            src={profileImage1}
            alt="My photo."
            widths={[300, 400]}
            sizes={`(max-width: 960px) 300px, 400px`}
            layout="constrained"
        />
    </div>
</div>

<style>
    h1 span {
        display: inline-block;
    }
    .about-container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        flex: 1;
        margin-top: 2em;
    }
    .about {
        display: flex;
        flex-direction: column;
        font-size: 20px;
        gap: 1em;
    }
    .profile-image {
        width: 400px;
    }
    @media screen and (max-width: 960px) {
        .profile-image {
            width: 300px;
        }
    }
</style>
